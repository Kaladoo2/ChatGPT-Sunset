{
  "manifest_version": 2,
  "name": "ChatGPT Horizon Sunset",
  "version": "1.0",
  "description": "Animate a sunset gradient at the bottom of ChatGPT",
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  }
}
